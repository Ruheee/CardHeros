<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= userID %> | Card Heroes</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
  <script defer src="/scripts/messages.js"></script>

  <style>
    main{
      display: flex;
      flex-direction: row;
    }
    ul{
      list-style: none;
    }
    li {
      background: #ccc;
      border: 1px solid black;
      cursor: pointer;
    }
    .message-frame{
      display: flex;
      flex-direction: column;
    }
  </style>
</head>

<body>
    <h1>My Messages</h1>
    <main>
      <ul>
      <% for (let message of messages) { %>
        <li class="message" id="<%= message.id %>">
          <% if (message.sender[0].id === userID) { %>
          <h2><%= message.receiver[0].name %></h2>
          <p>You</p>
          <% } else { %>
          <h2><%= message.sender[0].name %></h2>
          <p><%= message.sender[0].name %></p>
          <% } %>
          <p><%= message.message %></p>
        </li>
      <% } %>
      </ul>
      <div class="message-bar">
        <iframe id="message-frame" src=""></iframe>
        <form>
          <textarea rows="4" cols="50"></textarea><br><br>
          <input type="submit" value="Submit">
        </form>
      </div>
    </main>
</body>

</html>
