<!DOCTYPE html>
<html lang="en">

<head>
  <title>Card Heroes</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css"/>
  <link rel="stylesheet" href="/styles/card.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>

</head>

<body>
  <!-- header -->
  <%- include('partials/_header') %>

  <!-- Top  -->
  <section class="top-main">
    <!-- left top division -->
    <div>
      <span>CELEBRATING THE SPORTS</span>
      <span>LEGENDS</span>
    </div>
    <div>
      <img src="#" alt="Show card 1">
      <img src="#" alt="Show card 2">
      <img src="#" alt="Show card 3">
    </div>
  </section>
  <!-- hot cards section  -->
  <section>
    <h2>HOT CARDS</h2>
    <!-- Grid 2 rows  -->
    <div class="cards">
      <% for (let card of result) { %>
        <%- include('./partials/_card.ejs', {card: card}) %>
      <% } %>
    </div>
  </section>
  <!-- Top Brands Section -->
  <Section>
    <h2>Top Brands</h2>

    <section class="brands">

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="topps">
            <button class="brandBtn" type="submit" name="topps"><img class="brandLogo" src="/images/topps-logo.png" alt="Topps brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="bowman">
            <button class="brandBtn" type="submit" name="bowman"><img class="brandLogo" src="/images/Bowman_brand_logo.png" alt="Bowman Brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="donruss">
            <button class="brandBtn" type="submit" name="Donruss"><img class="brandLogo" src="/images/Donruss_logo.png" alt="Donruss Brand"></button>
          </form>
          </div>


          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="Fleer">
            <button class="brandBtn" type="submit" name="Fleer"><img class="brandLogo" src="/images/Fleer_Logo.svg" alt="Fleer Brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="Futera">
            <button class="brandBtn" type="submit" name="Futera"><img class="brandLogo" src="/images/Futera_logo.png" alt="Futera Brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="o-pee-chee">
            <button class="brandBtn" type="submit" name="o-pee-chee"><img class="brandLogo" src="/images/opc-logo.png" alt="o-pee-chee Brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="panini">
            <button class="brandBtn" type="submit" name="panini"><img class="brandLogo" src="/images/panini-logo.png" alt="panini Brand"></button>
          </form>
          </div>

          <div class="brand">
          <form method="POST" action="/cards">
            <input name="q" type="hidden" value="upper deck">
            <button class="brandBtn" type="submit" name="upper-deck"><img class="brandLogo" src="/images/upper-deck-logo.png" alt="upper-deck Brand"></button>
          </form>
          </div>
    </section>
  </Section>
  <!-- Footer -->
  <%- include('partials/_footer') %>
</body>

</html>
