<!DOCTYPE html>
<html lang="en">
<head>
  <title>Card Heroes Market</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">



  <!--Queries-->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/scripts/brand_menu.js"></script>
  <script src="/scripts/sports_menu.js"></script>
  <script src="/scripts/getCards.js"></script>
  <script src="/scripts/price-menu.js"></script>


  <link rel="stylesheet" href="/styles/card.css">
  <link rel="stylesheet" href="/styles/cards_view.css">
  <link rel="stylesheet" href="/styles/dropdown.css"/>

  <!-- Fonts and icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
<nav>

  <div class="dropdown">
    <button id="get-sports">Sports</button>
      <ul class="dropdown-menu">
        <% for (let sports of sport) { %>
          <li class="sport-dropdown hide-list" id="<%= sports.sport %>"><%= sports.sport %></li>
        <% } %>
      </ul>
  </div>

  <div class="dropdown">
    <button id="get-brands">Brands</button>
      <ul class="dropdown-menu">
        <% for (let brands of brand) { %>
          <li class="brand-dropdown hide-list" id="<%= brands.brand %>"><%= brands.brand %></li>
        <% } %>
      </ul>
  </div>

  <div class="dropdown">
    <button id="get-price">Price</button>
      <ul class="dropdown-menu">
        <li id="highest" class="price-dropdown hide-list">Highest to lowest</li>
        <li id="lowest" class="price-dropdown hide-list">Lowest to highest</li>
      </ul>
  </div>

</nav>
<div class="cards" id="all-cards"></div>
<div id="soccer-ball">
  <button id="load-more">More Cards<img src="https://upload.wikimedia.org/wikipedia/commons/d/d3/Soccerball.svg" alt="soccer-ball-loading"></button>
</div>
</body>
</html>
