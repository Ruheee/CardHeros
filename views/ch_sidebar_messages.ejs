<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sidebar Messages | Card Heroes</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/sidebar-messages.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/sidebar-messages.js"></script>
</head>

<body>
  <ul class="message-list">
    <% if (user) { %>
      <li class="message new-message">
        <h3><%= user[0].name %></h3>
        <p>New message</p>
      </li>
    <% } %>
    <% for (let message of messages) { %>
      <li class="message" id="<%= message.id %>">
        <% if (message.sender[0].id === userID) { %>
        <h3><%= message.receiver[0].name %></h3>
        <p>You: <%= message.message %></p>
        <% } else { %>
        <h3><%= message.sender[0].name %></h3>
        <p><%= message.sender[0].name %>: <%= message.message %></p>
        <% } %>
      </li>
    <% } %>
    </ul>
 </body>
 </html>
