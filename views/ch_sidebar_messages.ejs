<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sidebar Messages | Card Heroes</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/sidebar-messages.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/sidebar-messages.js"></script>
</head>

<body>
  <ul class="message-list">
    <% for (let message of messages) { %>
      <li class="message" id="<%= message.card_id %>">
        <h3><%= message.sender_id === userID ? message.receiver : message.sender %></h3>
        <p><%= message.sender_id === userID ? 'You' : message.sender %>: <%= message.message %></p>
      </li>
      <div class="template-vars <%= message.id %>" style="display: none;" data-user-name="<%= message.sender_id === userID ? message.receiver : message.sender %>"></div>
    <% } %>
    <div id="new-user" style="display: none;" data-user-name="<%= user[0].name %>"></div>
  </ul>
 </body>
 </html>
