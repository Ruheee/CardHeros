<!DOCTYPE html>
<html lang="en">

<head>
  <title>New Card | Card Heroes</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/newCard.css" />
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/new-card.js"></script>
  <script src="https://kit.fontawesome.com/519d339fcd.js" crossorigin="anonymous"></script>

</head>

<body>
  <main>
    <h1>New Card</h1>
    <div class="form-container">
      <side class="images-container">
        <div class="image-placeholder front-image"><span>+ Add a front image</span></div>
        <div class="image-placeholder back-image"><span>+ Add a back image</span></div>
      </side>
      <div class="fields-container">
        <form method="post" src="/cards/new">
          <input type="text" name="title" placeholder="Title" required />
          <input type="text" name="player_name" placeholder="Player Name" required />
          <div class="selects-container">
            <select name="sport" class="sport-select" required>
              <option value="">Select a Sport</option>
              <option value="baseball">Baseball</option>
              <option value="hockey">Hockey</option>
              <option value="soccer">Soccer</option>
              <option value="basketball">Basketball</option>
              <option value="football">Football</option>
            </select>
            <select name="brand" class="brand-select" required>
              <option value="">Select a Brand</option>
              <option value="o-pee-chee">O-Pee-Chee</option>
              <option value="donruss">Donruss</option>
              <option value="upper deck">Upper Deck</option>
              <option value="topps">Topps</option>
              <option value="panini">Panini</option>
              <option value="futera">Futera</option>
              <option value="bowman">Bowman</option>
              <option value="fleer">Fleer</option>
            </select>
          </div>
          <input type="text" name="description" placeholder="Description" required />
          <div class="button-container">
            <input type="text" name="price" class="price" placeholder="Price" required />
            <div class="radio-container">
              <span class="radio-legend">Is it sold?</span>
              <input type="radio" name="is_sold" id="yes" value="true">
              <label for="yes">Yes</label>
              <input type="radio" name="is_sold" id="no" value="false" checked>
              <label for="yes">No</label>
            </div>
            <input type="submit" value="Create Card" />
          </div>
          <input type="hidden" name="card_front_url" id="card_front_url">
          <input type="hidden" name="card_back_url" id="card_back_url">
        </form>
      </div>
    </div>
  </main>
</body>

</html>
