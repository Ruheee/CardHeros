<header>
  <nav>
    <main>
      <a href="/">
        <img class="logo" src="/images/Logo.png" alt="Card Heroes Logo">
      </a>
      <form class="search" id="form" method="POST" action="/cards" role="search">
        <input type="search" id="query" name="q"
        placeholder="Search a Sport or Brand"
        aria-label="Search through site content">
        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
      <% if (userID) { %>
      <div class="login-menu">
        <div class="links">
          <a href="/cards" title="Cards" class="link"><i class="fa-solid fa-sheet-plastic fa-2xl"></i></a>
          <a href="/messages" title="Messages" class="link"><i class="fa-solid fa-message fa-2xl"></i></a>
          <a href="/admin" title="Profile"><img class="avatar" src="https://i.pravatar.cc/55?img=<%= userID %>" alt=""></a>
        </div>
        <a href="/logout" title="Logout" class="button">Logout</a>
      </div>
      <% } else { %>
      <div class="login-menu">
        <div class="links">
          <a href="/cards" title="Cards" class="link"><i class="fa-solid fa-sheet-plastic fa-2xl"></i></a>
        </div>
        <a href="/login" title="Logout" class="button">Login</a>
       </div>
      <% } %>
    </main>
  </nav>
</header>
