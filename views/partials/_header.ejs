<header>
  <nav>
    <a href="/">
      <img class="logo" src="/images/Logo.png" alt="Card Heroes Logo">
    </a>
    <form class="search" id="form" method="POST" action="/cards" role="search">
      <input type="search" id="query" name="q"
       placeholder="Search a Sport or Brand"
       aria-label="Search through site content">
      <button type="submit">🔍</button>
    </form>
    <% if (userID) { %>
      <form class="" action="/logout" method="GET">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>

      <span><a href="/admin">admin</a></span>
      <span><a href="/messages">messages</a></span>
      <img src="https://i.pravatar.cc/55?img=<%= userID %>" alt="">
    <% } %>

    <% if (!userID) { %>
    <form class="" action="/login" method="GET">
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <% } %>

  </nav>
</header>
